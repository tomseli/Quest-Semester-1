<SwitchContainer>:
    orientation: 'vertical'
    Button:
        text: 'Apply Values'
        on_press: root.on_button_press()
    Slider:
        id: slider1
        min: 0
        max: 100
        value: 50
        on_value: root.on_slider_value(self, self.value)
    Label:
        text: f'Slider 1: {slider1.value}'
    Slider:
        id: slider2
        min: 0
        max: 100
        value: 50
        on_value: root.on_slider_value(self, self.value)
    Label:
        text: f'Slider 2: {slider2.value}'
    Slider:
        id: slider3
        min: 0
        max: 100
        value: 50
        on_value: root.on_slider_value(self, self.value)
    Label:
        text: f'Slider 3: {slider3.value}'